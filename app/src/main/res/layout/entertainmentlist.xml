        android:background="@drawable/background_list"
        android:layout_marginLeft="@dimen/_4sdp"
        android:layout_marginRight="@dimen/_4sdp"
        android:layout_marginBottom="@dimen/_3sdp">

    <ImageView android:layout_height="100dp" android:layout_width="0dp" app:srcCompat="@drawable/tigers" android:layout_weight="1"/>


    <LinearLayout android:layout_height="match_parent" android:layout_width="0dp" android:orientation="vertical" android:layout_weight="3">

